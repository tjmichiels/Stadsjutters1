<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Stadsjutters1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Stadsjutters1"
    Title="Stadsjutters1"
    FlyoutBehavior="Flyout">

    <Shell.TitleView>
        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" Padding="10">
            <Label Text="Home Page" HorizontalOptions="CenterAndExpand" FontSize="Medium" />
            <Image Source="profile_icon.png" HorizontalOptions="End" />
        </StackLayout>
    </Shell.TitleView>

    <FlyoutItem Title="Profiel" Icon="person_24dp_f19e39.png">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" /> 
    </FlyoutItem>

    <FlyoutItem Title="Mijn straat-/huisvondsten" Icon="package_2_24dp_000000.png">
        <ShellContent ContentTemplate="{DataTemplate local:Straatvondsten}" />
    </FlyoutItem>

    <FlyoutItem Title="Mijn beoordelingen" Icon="star_24dp_000000.png">
        <ShellContent ContentTemplate="{DataTemplate local:Beoordelingen}" />
    </FlyoutItem>

    <FlyoutItem Title="Opgeslagen vondsten" Icon="bookmark_24dp_000000.png">
        <ShellContent ContentTemplate="{DataTemplate local:OpgeslagenVondsten}" />
    </FlyoutItem>

    <FlyoutItem Title="Instellingen" Icon="settings_24dp_000000.png">
        <ShellContent ContentTemplate="{DataTemplate local:Instellingen}" />
    </FlyoutItem>
    
    <FlyoutItem Title="Beheerdersdashboard" Icon="dashboard_2_24dp_000000.png">
        <ShellContent ContentTemplate="{DataTemplate local:BeheersDashboard}" />
    </FlyoutItem>
    
    <FlyoutItem Title="Log uit" Icon="logout_24dp_000000.png">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>
    
    <FlyoutItem Title="Log in" Icon="login_24dp_000000.png">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>
    
  
    
    
   
    

    <TabBar>
        <Tab Title="Home" Icon="logostadsjutters.svg">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        
        <Tab Title="Vondsten" Icon="logostadsjutters.svg">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        
        <Tab Title="Plaatsen" Icon="logostadsjutters.svg">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>

        <Tab Title="Chats" Icon="logostadsjutters.svg">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>

        <Tab Title="Meldingen" Icon="logostadsjutters.svg">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
    </TabBar>
</Shell>
